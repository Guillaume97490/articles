<% include ../templates/head.ejs %>
<div class="container mt-3">

  <section>

    <h1 class="text-center"><%= article.titre %></h1>
    
    <div class="text-center">

    <% if(article.image) { %>
      <img class="img-full" src="/uploads/<%= article.image %>" alt="">
    <% } else { %> 
      <img class="img-full" src="/uploads/no-image.png" alt="">
    <% } %>
    </div>
    
    <div class="">
      <p><%= article.description %></p>
    </div>
    

  </section>

  <a href="/article/<%= article.id %>/edit" class="btn btn-warning"><span><i class="far fa-edit"></i></span> <span class="">Editer l'article</span></a>

</div>
